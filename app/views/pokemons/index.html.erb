<div class="row">Count: <%= @count %></div>
<%= link_to "Upload pokemons", pokemons_path, method: :post, class: "btn btn-primary" %><br />
<%= link_to "Destroy all pokemons", pokemons_path, method: :delete, class: "btn btn-danger", :confirm => 'Are you sure?' %><br />
<% if true %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Pokemon</th>
        <th scope="col">Height</th>
        <th scope="col">Weight</th>
      </tr>
    </thead>
    <tbody>
      <% @pokemons.limit(100).each do |pokemon| %>
        <tr>
          <th scope="row"><%= pokemon.pokedex_id %></th>
          <td><%= pokemon.name %></td>
          <td><%= pokemon.height %></td>
          <td><%= pokemon.weight %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>